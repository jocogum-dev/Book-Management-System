@page
@model BMS.Web.Pages.Books.BooksModel
@{
    ViewData["Title"] = "My Books";
}
<h1>@ViewData["Title"]</h1>
<p class="lead">@Model.Books.Count() books found</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Directory</th>
            <th>Size (KB)</th>
            <th>Last Modified</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var book in Model.Books)
    {
        <tr>
            <td>@book.FileName</td>
            <td>@book.DirectoryPath</td>
            <td>@(book.SizeBytes / 1024)</td>
            <td>@book.LastModified.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
        </tr>
    }
    </tbody>
</table>