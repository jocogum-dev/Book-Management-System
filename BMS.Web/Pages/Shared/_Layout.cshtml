@{
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Books Management System</title>
    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Home/Index">Book Management System</a>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"/>
                </form>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <aside class="sticky-top vh-100 col-2 border border-top-0 border-right">
                <ul class="nav nav-pills flex-column mt-3">
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Home/Index" ? "active" : "") d-flex gap-3 justify-content-center justify-content-md-start" asp-area="" asp-page="/Home/Index">
                                <i class="bi bi-house-fill"></i>
                                <span class="d-none d-md-block">Home</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Dashboard/Index" ? "active" : "") d-flex gap-3 justify-content-center justify-content-md-start" asp-area="" asp-page="/Dashboard/Index">
                                <i class="bi bi-graph-up-arrow"></i>
                                <span class="d-none d-md-block">Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Books/Index" ? "active" : "") d-flex gap-3 justify-content-center justify-content-md-start" asp-area="" asp-page="/Books/Index">
                                <i class="bi bi-file-pdf-fill"></i>
                                <span class="d-none d-md-block">Books</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Scan/Index" ? "active" : "") d-flex gap-3 justify-content-center justify-content-md-start" asp-area="" asp-page="/Scan/Index">
                                <i class="bi bi-file-earmark-plus-fill"></i>
                                <span class="d-none d-md-block">Scan</span>
                            </a>
                        </li>

                    </ul>
            </aside>
            <main role="main" class="col-10 p-3">
                @RenderBody()
            </main>
        </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
