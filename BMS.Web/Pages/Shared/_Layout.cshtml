@{
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Books Management System</title>
    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Home/Index">Book Management System</a>
                @if(User.Identity?.IsAuthenticated == true){
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            @User.Identity.Name
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            @if(User.IsInRole("Admin")){
                                <li>
                                    <a class="dropdown-item" asp-page="/Account/AssignRole">Assign Role</a>
                                </li>
                            }
                            <li>
                                <form method="post" asp-page="/Account/Logout" class="d-inline">
                                    <button type="submit" class="dropdown-item">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                } else {
                    <div class="col-md-3 text-end">
                        <a asp-page="/Account/Login" class="btn btn-outline-primary me-2">Login</a>
                        <a asp-page="/Account/Register" class="btn btn-primary">Sign-up</a>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <aside class="sticky-top vh-100 col-2 border border-top-0 border-right overflow-hidden">
                <ul class="nav nav-pills flex-column mt-3">
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Home/Index" ? "active" : "") d-flex gap-3 justify-content-center justify-content-md-start" asp-area="" asp-page="/Home/Index">
                                <i class="bi bi-house-fill"></i>
                                <span class="d-none d-md-block">Home</span>
                            </a>
                        </li>
                        @if(User.IsInRole("Admin")){
                            <li class="nav-item">
                                <a class="nav-link @(currentPage == "/Dashboard/Index" ? "active" : "") d-flex gap-3 justify-content-center justify-content-md-start" asp-area="" asp-page="/Dashboard/Index">
                                    <i class="bi bi-pie-chart-fill"></i>
                                    <span class="d-none d-md-block">Dashboard</span>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Books/Index" ? "active" : "") d-flex gap-3 justify-content-center justify-content-md-start" asp-area="" asp-page="/Books/Index">
                                <i class="bi bi-file-pdf-fill"></i>
                                <span class="d-none d-md-block">Books</span>
                            </a>
                        </li>
                        @if(User.IsInRole("Admin")){
                            <li class="nav-item">
                                <a class="nav-link @(currentPage == "/Scan/Index" ? "active" : "") d-flex gap-3 justify-content-center justify-content-md-start" asp-area="" asp-page="/Scan/Index">
                                    <i class="bi bi-file-earmark-plus-fill"></i>
                                    <span class="d-none d-md-block">Scan</span>
                                </a>
                            </li>
                        }
                    </ul>
            </aside>
            <main role="main" class="col-10 p-3">
                @RenderBody()
            </main>
        </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
